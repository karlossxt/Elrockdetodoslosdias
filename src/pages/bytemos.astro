---
import RockLayout from '../layouts/RockLayout.astro';
import Header from '../components/Header.astro';
import NewsCard from '../components/NewsCard.astro';
import Footer from '../components/Footer.astro';
import Player from '../components/Player.astro';
---

<RockLayout title="Bytemos | Videojuegos y Tecnología | El Rock de Todos los Días">
    <Header />

    <!-- Aumentamos el padding a 160px para el nuevo Header triple -->
    <main class="bytemos-wrapper">
        
        <!-- CABECERA BYTEMOS CON EFECTO GLITCH -->
        <section class="bytemos-header">
            <div class="container">
                <span class="system-status">>> SISTEMA OPERATIVO: ROCK_HUB_V2.0</span>
                <h1 class="glitch-title" data-text="BYTEMOS">BYTEMOS</h1>
                <p class="tagline">La intersección definitiva entre los bits y los riffs.</p>
            </div>
            <div class="corner-top-right"></div>
            <div class="corner-bottom-left"></div>
        </section>

        <!-- FILTROS DIGITALES (Ajustado el 'top' para el nuevo Header) -->
        <nav class="bytemos-nav">
            <div class="container">
                <a href="#" class="active">/ TODO</a>
                <a href="#">/ RESEÑAS</a>
                <a href="#">/ HARDWARE</a>
                <a href="#">/ RETRO_GAMING</a>
            </div>
        </nav>

        <!-- CONTENIDO PRINCIPAL -->
        <section class="content-section">
            <div class="container">
                <div class="bytemos-grid">
                    <NewsCard 
                        title="El Rock en la Era Digital: La Revolución en los Videojuegos"
                        summary="La industria de los videojuegos y el rock consolidan una alianza inmersiva que llega a los Grammy 2026."
                        date="16 ENE 2026"
                        category="TECH"
                        region="CYBERSPACE"
                        image="https://images.unsplash.com/photo-1542751371-adc38448a05e?q=80&w=800"
                        url="/nota-bytemos"
                    />

                    <NewsCard 
                        title="Reseña: Doom The Dark Ages y su soundtrack industrial"
                        summary="Exploramos cómo la nueva entrega de la saga eleva el estándar del metal en el gaming."
                        date="14 ENE 2026"
                        category="RESEÑA"
                        region="HARDWARE"
                        image="https://images.unsplash.com/photo-1550745165-9bc0b252726f?q=80&w=800"
                        url="#"
                    />
                    
                    <NewsCard 
                        title="GTA VI: Lo que esperamos de su estación de Rock"
                        summary="Rockstar Games y su histórica curaduría musical vuelven al foco con el lanzamiento más esperado."
                        date="10 ENE 2026"
                        category="NOTICIAS"
                        region="WORLDWIDE"
                        image="https://images.unsplash.com/photo-1511512578047-dfb367046420?q=80&w=800"
                        url="#"
                    />
                </div>
            </div>
        </section>
    </main>

    <Footer />
    <Player />
</RockLayout>

<style>
    /* RESET Y CONTENEDOR */
    .bytemos-wrapper { padding-top: 155px; background: #000; }
    .container { max-width: 1400px; margin: 0 auto; padding: 0 5%; }

    /* CABECERA GAMER */
    .bytemos-header {
        background: #000;
        padding: 120px 0;
        position: relative;
        border-bottom: 2px solid #111;
        overflow: hidden;
    }

    .system-status {
        font-family: 'Inter', sans-serif;
        font-weight: 800;
        font-size: 0.7rem;
        color: #ff0000;
        display: block;
        margin-bottom: 20px;
        letter-spacing: 3px;
    }

    .glitch-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: clamp(5rem, 15vw, 12rem);
        line-height: 0.8;
        position: relative;
        color: white;
        margin: 0;
        letter-spacing: -2px;
    }

    /* EFECTO GLITCH MEJORADO */
    .glitch-title::before, .glitch-title::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.8;
    }

    .glitch-title::before {
        left: 3px;
        text-shadow: -3px 0 #ff0000;
        clip: rect(44px, 9999px, 56px, 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }

    .glitch-title::after {
        left: -3px;
        text-shadow: -3px 0 #00fff2;
        clip: rect(44px, 9999px, 56px, 0);
        animation: glitch-anim2 1.5s infinite linear alternate-reverse;
    }

    .tagline {
        font-family: 'Inter', sans-serif;
        font-weight: 700;
        font-size: 1.2rem;
        color: #444;
        margin-top: 30px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* NAVEGACIÓN SECCIÓN (Sticky debajo del Header) */
    .bytemos-nav {
        background: rgba(5, 5, 5, 0.95);
        backdrop-filter: blur(10px);
        padding: 20px 0;
        border-bottom: 1px solid #111;
        position: sticky;
        top: 155px; /* IMPORTANTE: Debe coincidir con el alto del Header */
        z-index: 100;
    }
    .bytemos-nav .container { display: flex; gap: 40px; }
    .bytemos-nav a {
        font-family: 'Bebas Neue', sans-serif;
        text-decoration: none;
        color: #444;
        font-size: 1.6rem;
        letter-spacing: 1px;
        transition: 0.3s;
    }
    .bytemos-nav a:hover, .bytemos-nav a.active { color: #ff0000; }

    /* DECORACIONES */
    .corner-top-right {
        position: absolute; top: 30px; right: 30px;
        width: 80px; height: 80px;
        border-top: 3px solid #ff0000; border-right: 3px solid #ff0000;
    }
    .corner-bottom-left {
        position: absolute; bottom: 30px; left: 30px;
        width: 80px; height: 80px;
        border-bottom: 3px solid #222; border-left: 3px solid #222;
    }

    /* GRID DE NOTICIAS */
    .content-section { padding: 100px 0; }
    .bytemos-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* 3 columnas para que se vean impactantes */
        gap: 40px;
    }

    /* ANIMACIONES */
    @keyframes glitch-anim {
        0% { clip: rect(31px, 9999px, 94px, 0); }
        20% { clip: rect(62px, 9999px, 42px, 0); }
        40% { clip: rect(15px, 9999px, 80px, 0); }
        60% { clip: rect(90px, 9999px, 20px, 0); }
        80% { clip: rect(40px, 9999px, 60px, 0); }
        100% { clip: rect(67px, 9999px, 51px, 0); }
    }
    @keyframes glitch-anim2 {
        0% { clip: rect(10px, 9999px, 85px, 0); }
        100% { clip: rect(80px, 9999px, 20px, 0); }
    }

    @media (max-width: 1100px) {
        .bytemos-grid { grid-template-columns: repeat(2, 1fr); }
    }
    @media (max-width: 768px) {
        .glitch-title { font-size: 5rem; }
        .bytemos-nav { top: 110px; } /* Ajuste móvil */
        .bytemos-grid { grid-template-columns: 1fr; }
    }
</style>