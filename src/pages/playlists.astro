---
import CategoryLayout from '../layouts/CategoryLayout.astro';

const PLAYLIST_LIST = [
    { title: "METAL & RUIDO", desc: "La selección más pesada.", img: "https://images.unsplash.com/photo-1598387181032-a3103a2db5b3", url: "#" },
    { title: "ROCK CLÁSICO", desc: "Himnos inmortales.", img: "https://images.unsplash.com/photo-1498038432885-c6f3f1b912ee", url: "#" },
    { title: "ESCENA NACIONAL", desc: "El pulso de México.", img: "https://images.unsplash.com/photo-1521433504964-2d3997787352", url: "#" },
    { title: "PANTALLAS", desc: "Soundtracks de culto.", img: "https://images.unsplash.com/photo-1478720568477-152d9b164e26", url: "#" }
];
---

<CategoryLayout 
    title="PLAYLISTS"
    subtitle="Nuestra selección editorial para tus oídos."
    image="https://images.unsplash.com/photo-1614613535308-eb5fbd3d2c17"
    color="#1DB954" 
>
    <!-- Grid de Playlists -->
    <div class="playlists-grid-full">
        {PLAYLIST_LIST.map(list => (
            <a href={list.url} target="_blank" class="pl-card-large">
                <div class="img-wrap">
                    <img src={list.img} alt={list.title} />
                    <div class="play-icon"><i class="fa-brands fa-spotify"></i></div>
                </div>
                <div class="info-wrap">
                    <h3>{list.title}</h3>
                    <p>{list.desc}</p>
                </div>
            </a>
        ))}
    </div>
</CategoryLayout>

<style>
    .playlists-grid-full {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        width: 100%;
    }

    .pl-card-large {
        background: #0a0a0a;
        border: 1px solid #1a1a1a;
        text-decoration: none;
        border-radius: 12px;
        overflow: hidden;
        transition: 0.4s;
    }

    .img-wrap {
        position: relative;
        aspect-ratio: 1;
        overflow: hidden;
    }

    .img-wrap img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%);
        transition: 0.5s;
    }

    .play-icon {
        position: absolute;
        inset: 0;
        background: rgba(29, 185, 84, 0.4);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: 0.3s;
    }

    .play-icon i { font-size: 4rem; color: white; }

    .info-wrap { padding: 20px; text-align: center; }
    h3 { font-family: 'Bebas Neue'; font-size: 2rem; color: white; margin: 0; }
    p { font-size: 0.9rem; color: #666; margin-top: 10px; }

    /* Hover */
    .pl-card-large:hover { border-color: #1DB954; transform: translateY(-8px); }
    .pl-card-large:hover img { filter: grayscale(0%); transform: scale(1.1); }
    .pl-card-large:hover .play-icon { opacity: 1; }
    .pl-card-large:hover h3 { color: #1DB954; }
</style>