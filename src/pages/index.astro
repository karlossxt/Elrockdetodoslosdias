<style>
    /* El resto del CSS se mantiene igual, ya que est√° optimizado */
    html { scroll-behavior: smooth; }
    .main-wrapper { padding-top: 100px; background: #000; }
    .section-padding { padding: 80px 0; }
    .container { max-width: 1250px; margin: 0 auto; padding: 0 5%; }

    /* NEWS SECTION */
    .news-home { background: #000; border-top: 1px solid #111; }
    .section-header { display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 40px; }
    .header-left { display: flex; align-items: center; gap: 15px; }
    .red-bar { width: 4px; height: 35px; background: #ff0000; }
    .section-title { font-family: 'Bebas Neue', sans-serif; font-size: 3.5rem; margin: 0; line-height: 1; color: white; letter-spacing: 1px; }
    .red { color: #ff0000; }
    .view-more { font-family: 'Inter', sans-serif; font-size: 10px; font-weight: 800; color: #444; text-decoration: none; letter-spacing: 2px; }

    /* GRID & CARDS */
    .grid-container { display: grid; grid-template-columns: repeat(4, 1fr); gap: 25px; align-items: start; }
    .grid-container :global(img) { width: 100%; aspect-ratio: 3 / 4; object-fit: cover; border-radius: 12px; }
    .placeholder-card { border: 1px dashed #222; border-radius: 15px; display: flex; align-items: center; justify-content: center; aspect-ratio: 3 / 4; background: rgba(255,255,255,0.01); }
    .placeholder-card span { font-family: 'Bebas Neue', sans-serif; font-size: 1.5rem; color: #1a1a1a; transform: rotate(-90deg); }

    /* SPOTIFY BUTTON */
    .cta-container { display: flex; justify-content: center; margin-top: 60px; }
    .btn-spotify { display: inline-flex; align-items: center; gap: 12px; background-color: #1DB954; color: #000; font-family: 'Inter', sans-serif; font-weight: 800; font-size: 13px; text-transform: uppercase; letter-spacing: 1.5px; padding: 16px 35px; border-radius: 50px; text-decoration: none; transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); box-shadow: 0 4px 15px rgba(29, 185, 84, 0.2); }
    .btn-spotify:hover { background-color: #1ed760; transform: scale(1.05); box-shadow: 0 8px 25px rgba(29, 185, 84, 0.4); }
    .btn-spotify svg { width: 20px; height: 20px; }

    /* ALIADOS */
    .aliados-section { padding: 100px 0; background: #000; border-top: 1px solid #111; text-align: center; }
    .badge { color: #ff0000; font-family: 'Inter', sans-serif; font-size: 11px; font-weight: 800; letter-spacing: 3px; margin-bottom: 15px; }
    .aliados-title { font-family: 'Bebas Neue', sans-serif; font-size: 4rem; color: white; margin-bottom: 50px; }
    .aliados-grid { display: grid; grid-template-columns: repeat(6, 1fr); gap: 15px; margin-bottom: 40px; }
    .aliado-card { background: #050505; border: 1px solid #111; border-radius: 12px; padding: 35px 15px; display: flex; flex-direction: column; align-items: center; gap: 15px; transition: all 0.3s ease; }
    .aliado-card:hover { border-color: #333; background: #080808; transform: translateY(-5px); }
    .aliado-icon { font-size: 2rem; opacity: 0.7; }
    .aliado-name { font-family: 'Inter', sans-serif; font-size: 10px; font-weight: 700; color: #444; letter-spacing: 1px; }
    .aliados-footer { font-family: 'Inter', sans-serif; color: #333; font-size: 13px; margin-top: 30px; }
    .aliados-footer a { color: #ff0000; text-decoration: none; font-weight: 700; }

    /* RESPONSIVE */
    @media (max-width: 1100px) { .grid-container { grid-template-columns: repeat(2, 1fr); } .aliados-grid { grid-template-columns: repeat(3, 1fr); } }
    @media (max-width: 600px) { .grid-container { grid-template-columns: 1fr; } .aliados-grid { grid-template-columns: repeat(2, 1fr); } .aliados-title { font-size: 2.5rem; } .section-header { flex-direction: column; align-items: flex-start; gap: 15px; } }
</style>