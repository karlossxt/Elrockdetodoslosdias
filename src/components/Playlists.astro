---
const estrenos = [
    { title: 'SONGS OF A LOST WORLD', artist: 'THE CURE', image: '/cure.jpg' },
    { title: 'FROM ZERO', artist: 'LINKIN PARK', image: '' }, 
    { title: 'ROMANCE', artist: 'FONTAINES D.C.', image: '' },
    { title: 'INÉS', artist: 'RUBÉN ALBARRÁN', image: '' },
    { title: 'RITE HERE RITE NOW', artist: 'GHOST', image: '' },
];
---

<section class="seccion-estrenos-principal">
    <div class="container-compact">
        
        <!-- CABECERA HOMOLOGADA -->
        <div class="cabecera-unificada">
            <div class="lado-izquierdo">
                <div class="barra-roja-editorial"></div>
                <h2 class="titulo-seccion-estandar">ESTRENOS <span class="itinerario-rojo">DE LA SEMANA</span></h2>
            </div>
            <div class="etiqueta-spotify">
                <span class="punto-verde"></span> TOP 5 SEMANAL
            </div>
        </div>

        <!-- EL CONTENEDOR DE LA CUADRÍCULA -->
        <div class="cuadricula-estrenos">
            {estrenos.map((item) => (
                <article class="tarjeta-estreno">
                    <div class="contenedor-imagen">
                        {item.image ? (
                            <img src={item.image} alt={item.title} />
                        ) : (
                            <div class="relleno-vacio">
                                <span>{item.artist[0]}</span>
                            </div>
                        )}
                        <div class="capa-hover">
                            <i class="fa-brands fa-spotify"></i>
                        </div>
                    </div>
                    <div class="contenedor-texto">
                        <h4 class="nombre-disco">{item.title}</h4>
                        <p class="nombre-artista">{item.artist}</p>
                    </div>
                </article>
            ))}
        </div>
        
    </div>
</section>

<style>
    /* 1. CONTENEDOR PARA ALINEAR CON EL RESTO DE LA WEB */
    .container-compact {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .seccion-estrenos-principal {
        padding: 0 0 80px 0; /* Espaciado inferior */
        background: #000;
        width: 100%;
    }

    /* 2. CABECERA (IGUAL A HISTORIAS) */
    .cabecera-unificada {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-bottom: 45px;
        border-bottom: 1px solid #111;
        padding-bottom: 20px;
    }

    .lado-izquierdo { display: flex; align-items: center; gap: 20px; }
    
    .barra-roja-editorial { 
        width: 6px; 
        height: 55px; /* Altura idéntica a Historias */
        background: #ff0000; 
    }

    .titulo-seccion-estandar {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 4.5rem; /* Tamaño idéntico a Historias */
        line-height: 0.85;
        color: white;
        margin: 0;
        letter-spacing: -1px;
    }

    .itinerario-rojo { color: #ff0000; font-style: italic; }

    .etiqueta-spotify {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #1DB954;
        font-family: 'Inter', sans-serif;
        font-size: 10px;
        font-weight: 900;
        letter-spacing: 2px;
        margin-bottom: 10px;
    }
    .punto-verde { width: 6px; height: 6px; background: #1DB954; border-radius: 50%; }

    /* 3. ESTA ES LA REGLA QUE PONE LOS DISCOS EN HORIZONTAL */
    .cuadricula-estrenos {
        display: grid !important; /* Forzamos el grid */
        grid-template-columns: repeat(5, 1fr) !important; /* 5 columnas una al lado de otra */
        gap: 20px;
        width: 100%;
    }

    /* 4. DISEÑO DE LAS TARJETAS */
    .contenedor-imagen {
        position: relative;
        aspect-ratio: 1 / 1;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 15px;
        background: #111;
    }

    .contenedor-imagen img { width: 100%; height: 100%; object-fit: cover; }

    .relleno-vacio {
        width: 100%; height: 100%;
        background: linear-gradient(135deg, #080808 0%, #151515 100%);
        display: flex; align-items: center; justify-content: center;
    }
    .relleno-vacio span { font-family: 'Bebas Neue'; font-size: 4rem; color: #1a1a1a; }

    .nombre-disco {
        font-family: 'Bebas Neue', sans-serif;
        color: #fff;
        font-size: 1.1rem;
        margin: 0 0 5px 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .nombre-artista {
        font-family: 'Inter', sans-serif;
        color: #555;
        font-size: 9px;
        font-weight: 800;
        text-transform: uppercase;
    }

    /* RESPONSIVO */
    @media (max-width: 1100px) {
        .cuadricula-estrenos { grid-template-columns: repeat(3, 1fr) !important; }
    }
    @media (max-width: 600px) {
        .cuadricula-estrenos { grid-template-columns: repeat(2, 1fr) !important; }
        .titulo-seccion-estandar { font-size: 3rem; }
    }
</style>