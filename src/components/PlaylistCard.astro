---
const { title, description, image, color, url } = Astro.props;
---
<a href={url} class="playlist-card-link">
    <div class="playlist-card">
        <div class="img-container">
            <img src={image} alt={title} />
            <div class="spotify-icon-overlay">
                <i class="fa-brands fa-spotify"></i>
            </div>
            <!-- Efecto de tinte segÃºn el color de la playlist -->
            <div class="color-overlay" style={`background: linear-gradient(transparent, ${color}cc)`}></div>
        </div>
        <div class="playlist-info">
            <h3>{title}</h3>
            <p>{description}</p>
        </div>
    </div>
</a>

<style>
    .playlist-card-link { text-decoration: none; display: block; }
    
    .playlist-card {
        background: #080808;
        border: 1px solid #111;
        border-radius: 8px;
        overflow: hidden;
        transition: all 0.4s ease;
    }

    .img-container {
        position: relative;
        aspect-ratio: 1 / 1;
        overflow: hidden;
    }

    .img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: 0.6s;
    }

    .color-overlay {
        position: absolute;
        bottom: 0; left: 0; width: 100%; height: 60%;
        z-index: 1;
    }

    .spotify-icon-overlay {
        position: absolute;
        top: 50%; left: 50%; transform: translate(-50%, -50%);
        font-size: 3rem;
        color: white;
        z-index: 2;
        opacity: 0.8;
        transition: 0.3s;
    }

    .playlist-info {
        padding: 20px;
        text-align: center;
        background: #080808;
    }

    .playlist-info h3 {
        font-family: 'Bebas Neue', sans-serif;
        color: white;
        font-size: 1.8rem;
        margin-bottom: 5px;
        letter-spacing: 1px;
    }

    .playlist-info p {
        font-family: 'Inter', sans-serif;
        color: #666;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
    }

    /* HOVER EFFECTS */
    .playlist-card:hover {
        border-color: #333;
        transform: translateY(-5px);
    }
    .playlist-card:hover img { transform: scale(1.1); }
    .playlist-card:hover .spotify-icon-overlay { opacity: 1; transform: translate(-50%, -50%) scale(1.2); color: #1DB954; }
</style>