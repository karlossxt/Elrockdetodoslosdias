---
// Chronicle-style Hero for El Rock de Todos los Días
interface Props {
  image: string;
  title: string;
  category?: string;
  author?: string;
  date?: string;
}
const { image, title, category = 'ROCK', author = 'REDACCIÓN', date = '' } = Astro.props;
---

<section class="chronicle-hero" style={`background-image: url(${image});`}>
  <div class="hero-overlay"></div>

  <div class="hero-inner">
    <div class="badge">BREAKING NEWS</div>
    <h1 class="hero-title">{title}</h1>

    <div class="meta-row">
      <span class="meta-author">BY {author}</span>
      {date && <span class="meta-date">{date}</span>}
    </div>
  </div>

  <div class="accent-red"></div>
</section>

<style>
  .chronicle-hero { position: relative; height: 75vh; overflow: hidden; display: flex; align-items: flex-end; background-position: center; background-size: cover; background-attachment: fixed; filter: grayscale(100%) brightness(0.45); }
  .chronicle-hero .hero-overlay { position: absolute; inset: 0; }
  .chronicle-hero .hero-inner { position: relative; z-index: 2; max-width: 1100px; margin: 0 auto 5rem; padding: 0 20px; color: white; width: 100%; }

  .chronicle-hero .badge { display: inline-block; background: #ff0033; color: #fff; padding: 8px 14px; font-weight: 800; letter-spacing: 0.08em; margin-bottom: 1.5rem; }
  .chronicle-hero .hero-title { font-family: 'Bebas Neue', sans-serif; font-size: clamp(2.5rem, 6vw, 5.5rem); line-height: 0.9; text-transform: uppercase; font-style: italic; margin: 0 0 1rem; letter-spacing: -1px; }

  .chronicle-hero .meta-row { display: flex; gap: 2rem; color: #d4d4d4; font-weight: 700; }
  .chronicle-hero .meta-author { background: #111; padding: 6px 10px; display: inline-block; }
  .chronicle-hero .meta-date { opacity: 0.9; }

  .chronicle-hero .accent-red { position: absolute; right: 0; top: 0; bottom: 0; width: 14px; background: #8b001f; }

  @media (max-width: 768px) {
    .chronicle-hero { height: 60vh; }
    .chronicle-hero .hero-title { font-size: 2.25rem; }
    .chronicle-hero .meta-row { flex-direction: column; gap: 0.6rem; }
  }
</style>