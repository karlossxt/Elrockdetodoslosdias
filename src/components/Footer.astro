<style>
    .main-footer { 
        background-color: #050505; 
        border-top: 2px solid #111; 
        padding: 80px 0 40px; 
        margin-top: 100px; 
    }

    .footer-container {
        max-width: 1150px; /* Alineado con el contenedor compacto de la web */
        margin: 0 auto;
        padding: 0 40px;
    }

    .footer-grid { 
        display: grid; 
        grid-template-columns: 1.5fr 1fr 1.2fr; 
        gap: 60px; 
    }
    
    .footer-logo { height: 70px; width: auto; margin-bottom: 25px; filter: grayscale(1) brightness(2); }
    .brand-description { font-family: 'Inter', sans-serif; color: #555; font-size: 0.85rem; line-height: 1.6; margin-bottom: 25px; font-weight: 500; }

    .direct-contact { display: flex; flex-direction: column; gap: 12px; }
    .contact-item { color: #888; text-decoration: none; font-family: 'Inter'; font-weight: 800; font-size: 0.75rem; display: flex; align-items: center; gap: 10px; transition: 0.3s; letter-spacing: 0.5px; }
    .contact-item i { color: #ff0000; font-size: 1rem; }
    .contact-item:hover { color: #fff; }

    /* CABECERAS DE SECCIÓN */
    .footer-section-header { display: flex; align-items: center; gap: 12px; margin-bottom: 30px; }
    .red-bar-small { width: 4px; height: 20px; background: #ff0000; }
    h4 { font-family: 'Bebas Neue'; font-size: 1.6rem; letter-spacing: 1px; color: white; margin: 0; }

    /* NAVEGACIÓN */
    .footer-nav a { display: block; color: #444; text-decoration: none; font-family: 'Bebas Neue'; font-size: 1.2rem; margin-bottom: 10px; transition: 0.3s; letter-spacing: 0.5px; }
    .footer-nav a:hover { color: #ff0000; transform: translateX(5px); }

    /* SOCIAL */
    .social-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 8px; margin-bottom: 20px; }
    .social-grid a { background: #0a0a0a; height: 45px; display: flex; align-items: center; justify-content: center; color: #444; font-size: 1.1rem; transition: 0.3s; border: 1px solid #151515; }
    .social-grid a:hover { background: #ff0000; border-color: #ff0000; color: #fff; transform: translateY(-3px); }

    .discord-cta { 
        display: flex; align-items: center; justify-content: center; gap: 10px; 
        background: #5865F2; color: white; text-decoration: none; 
        font-family: 'Inter'; font-weight: 900; padding: 14px; 
        font-size: 0.75rem; border-radius: 4px; transition: 0.3s; 
        letter-spacing: 1px;
    }
    .discord-cta:hover { background: #4752c4; }

    /* BOTTOM BAR */
    .footer-bottom { margin-top: 60px; padding-top: 30px; border-top: 1px solid #111; }
    .container-bottom { display: flex; justify-content: space-between; align-items: center; color: #333; font-family: 'Inter'; font-size: 0.7rem; font-weight: 800; letter-spacing: 0.5px; }
    .long-live { color: #222; margin-left: 5px; }
    .legal-links { display: flex; gap: 25px; }
    .legal-links a { color: #333; text-decoration: none; transition: 0.3s; }
    .legal-links a:hover { color: #888; }

    @media (max-width: 1024px) {
        .footer-grid { grid-template-columns: 1fr; gap: 50px; }
        .footer-logo { margin: 0 auto 25px; }
        .brand-side, .links-side, .social-side { text-align: center; }
        .footer-section-header { justify-content: center; }
        .contact-item { justify-content: center; }
        .social-grid { max-width: 300px; margin: 0 auto 20px; }
        .container-bottom { flex-direction: column; gap: 20px; text-align: center; }
    }
</style>