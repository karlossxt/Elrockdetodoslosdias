<style>
    .main-footer { background-color: #050505; border-top: 4px solid var(--accent); padding: 80px 5% 40px; margin-top: 80px; }
    .footer-grid { max-width: 1600px; margin: 0 auto; display: grid; grid-template-columns: 1.5fr 1fr 1.2fr; gap: 80px; }
    
    .footer-logo { height: 90px; width: auto; margin-bottom: 25px; }
    .brand-description { font-family: 'Inter', sans-serif; color: #888; font-size: 0.9rem; line-height: 1.6; margin-bottom: 25px; }

    .direct-contact { display: flex; flex-direction: column; gap: 10px; }
    .contact-item { color: white; text-decoration: none; font-family: 'Inter'; font-weight: 700; font-size: 0.85rem; display: flex; align-items: center; gap: 10px; transition: 0.3s; }
    .contact-item i { color: var(--accent); font-size: 1.1rem; }
    .contact-item:hover { color: var(--accent); }

    h4 { font-family: 'Bebas Neue'; font-size: 1.8rem; letter-spacing: 2px; color: white; margin-bottom: 30px; }
    .footer-nav a { display: block; color: #666; text-decoration: none; font-family: 'Bebas Neue'; font-size: 1.3rem; margin-bottom: 12px; transition: 0.3s; }
    .footer-nav a:hover { color: var(--accent); padding-left: 10px; }

    .social-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px; margin-bottom: 20px; }
    .social-grid a { background: #111; height: 50px; display: flex; align-items: center; justify-content: center; color: white; font-size: 1.2rem; transition: 0.3s; border: 1px solid #222; }
    .social-grid a:hover { background: var(--accent); border-color: var(--accent); transform: translateY(-3px); }

    .discord-cta { display: flex; align-items: center; justify-content: center; gap: 10px; background: #5865F2; color: white; text-decoration: none; font-family: 'Bebas Neue'; padding: 12px; font-size: 1.2rem; border-radius: 4px; transition: 0.3s; }
    .discord-cta:hover { background: white; color: #5865F2; }

    .footer-bottom { max-width: 1600px; margin: 60px auto 0; padding-top: 30px; border-top: 1px solid #111; }
    .container-bottom { display: flex; justify-content: space-between; align-items: center; color: #333; font-family: 'Inter'; font-size: 0.7rem; font-weight: 800; }
    .legal-links { display: flex; gap: 20px; }
    .legal-links a { color: #333; text-decoration: none; }
    .legal-links a:hover { color: white; }

    @media (max-width: 1024px) {
        .footer-grid { grid-template-columns: 1fr; text-align: center; }
        .contact-item { justify-content: center; }
        .social-grid { max-width: 300px; margin: 0 auto 20px; }
        .container-bottom { flex-direction: column; gap: 20px; }
    }
</style>