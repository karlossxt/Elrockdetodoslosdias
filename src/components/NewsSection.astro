    ---
const NACIONAL = [
  { title: 'Caifanes: El regreso a los escenarios', date: 'Hace 2 horas', img: 'https://picsum.photos/seed/1/800/600' },
  { title: 'Molotov prepara documental de 30 años', date: 'Ayer', img: 'https://picsum.photos/seed/2/800/600' }
];
const GLOBAL = [
  { title: 'Ghost redefine el Metal Melódico', date: 'Hace 5 horas', img: 'https://picsum.photos/seed/3/800/600' },
  { title: 'Linkin Park en CDMX: Preventa', date: 'Ayer', img: 'https://picsum.photos/seed/4/800/600' }
];
---
<section class="news-container">
    <div class="category-block">
        <div class="title-row">
            <h2>ESCENA <span class="red">NACIONAL</span></h2>
            <a href="#">VER MÁS MÉXICO</a>
        </div>
        <div class="cards-grid">
            {NACIONAL.map(post => (
                <article class="news-card">
                    <div class="thumb"><img src={post.img} /></div>
                    <div class="info">
                        <span class="time"><i class="fa-regular fa-clock"></i> {post.date}</span>
                        <h3>{post.title}</h3>
                    </div>
                </article>
            ))}
        </div>
    </div>

    <div class="category-block">
        <div class="title-row">
            <h2>DISTORSIÓN <span class="gray">GLOBAL</span></h2>
            <a href="#">MUNDO ROCK</a>
        </div>
        <div class="cards-grid">
            {GLOBAL.map(post => (
                <article class="news-card alt">
                    <div class="thumb"><img src={post.img} /></div>
                    <div class="info">
                        <span class="time"><i class="fa-regular fa-clock"></i> {post.date}</span>
                        <h3>{post.title}</h3>
                    </div>
                </article>
            ))}
        </div>
    </div>
</section>

<style>
    .news-container { padding: 80px 5%; max-width: 1400px; margin: 0 auto; }
    .category-block { margin-bottom: 80px; }
    .title-row { display: flex; justify-content: space-between; align-items: flex-end; border-bottom: 1px solid #222; margin-bottom: 30px; padding-bottom: 10px; }
    .title-row h2 { font-size: 2.5rem; margin: 0; border-left: 5px solid var(--accent); padding-left: 20px; }
    .red { color: var(--accent); }
    .gray { color: #555; }
    .title-row a { font-size: 10px; font-weight: 900; color: #555; text-decoration: none; letter-spacing: 2px; }

    .cards-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 30px; }
    .news-card { background: #0a0a0a; border: 1px solid #1a1a1a; border-radius: 12px; overflow: hidden; transition: 0.3s; }
    .news-card:hover { transform: translateY(-5px); border-color: var(--accent); }
    .news-card.alt:hover { border-color: white; }

    .thumb { height: 200px; overflow: hidden; }
    .thumb img { width: 100%; height: 100%; object-fit: cover; }
    .info { padding: 20px; }
    .time { font-size: 10px; color: #555; font-weight: bold; display: flex; align-items: center; gap: 5px; margin-bottom: 10px; }
    h3 { font-size: 1.2rem; margin: 0; line-height: 1.2; }
</style>