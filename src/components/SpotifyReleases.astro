---
const estrenos = [
    { title: 'SONGS OF A LOST WORLD', artist: 'THE CURE', image: '/cure.jpg' },
    { title: 'FROM ZERO', artist: 'LINKIN PARK', image: '' },
    { title: 'ROMANCE', artist: 'FONTAINES D.C.', image: '' },
    { title: 'INÉS', artist: 'RUBÉN ALBARRÁN', image: '' },
    { title: 'RITE HERE RITE NOW', artist: 'GHOST', image: '' },
];
---

<section class="estrenos-section">
    <!-- AÑADIMOS EL CONTENEDOR COMPACTO AQUÍ -->
    <div class="container-compact">
        
        <div class="estrenos-header">
            <div class="top-badge">
                <span class="dot"></span> TOP 5 SEMANAL
            </div>
            <h2 class="main-title">ESTRENOS <span class="red-italic">DE LA SEMANA</span></h2>
        </div>

        <div class="estrenos-grid">
            {estrenos.map((item) => (
                <div class="estreno-card">
                    <div class="img-container">
                        {item.image ? (
                            <img src={item.image} alt={item.title} />
                        ) : (
                            <div class="img-placeholder">
                                <span>{item.artist[0]}</span>
                            </div>
                        )}
                        <div class="hover-overlay">
                            <i class="fa-brands fa-spotify"></i>
                        </div>
                    </div>
                    <div class="txt-container">
                        <h4 class="release-name">{item.title}</h4>
                        <p class="release-artist">{item.artist}</p>
                    </div>
                </div>
            ))}
        </div>
        
    </div>
</section>

<style>
    /* 1. LIMITAMOS EL ANCHO DEL COMPONENTE */
    .container-compact {
        max-width: 1100px; /* EL MISMO ANCHO QUE TUS HISTORIAS */
        margin: 0 auto;
        padding: 0 20px;
    }

    .estrenos-section {
        padding: 0 0 60px 0; /* Quitamos padding superior para que se pegue arriba */
        background: #000;
        width: 100%;
    }

    /* 2. AJUSTE DE CABECERA */
    .estrenos-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .top-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: #1DB954;
        font-family: 'Inter', sans-serif;
        font-size: 10px;
        font-weight: 900;
        letter-spacing: 2px;
        margin-bottom: 10px;
    }

    .dot { width: 6px; height: 6px; background: #1DB954; border-radius: 50%; }

    .main-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 4rem; /* Aumentamos un poco para impacto */
        color: white;
        line-height: 0.8;
        margin: 0;
        letter-spacing: -2px;
    }

    .red-italic { color: #ff0000; font-style: italic; }

    /* 3. GRID ALINEADO */
    .estrenos-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
    }

    .img-container {
        position: relative;
        aspect-ratio: 1 / 1;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 15px;
        background: #111;
        border: 1px solid #1a1a1a;
    }

    .img-container img { width: 100%; height: 100%; object-fit: cover; }

    .img-placeholder {
        width: 100%; height: 100%;
        background: linear-gradient(135deg, #050505 0%, #1a1a1a 100%);
        display: flex; align-items: center; justify-content: center;
    }
    .img-placeholder span { font-family: 'Bebas Neue'; font-size: 4rem; color: #222; }

    .hover-overlay {
        position: absolute;
        top: 0; left: 0; width: 100%; height: 100%;
        background: rgba(29, 185, 84, 0.4);
        display: flex; align-items: center; justify-content: center;
        opacity: 0; transition: 0.3s;
    }
    .img-container:hover .hover-overlay { opacity: 1; }

    .release-name {
        font-family: 'Bebas Neue', sans-serif;
        color: #fff;
        font-size: 1.1rem;
        margin: 0 0 5px 0;
        line-height: 1;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .release-artist {
        font-family: 'Inter', sans-serif;
        color: #666;
        font-size: 9px;
        font-weight: 800;
        text-transform: uppercase;
    }

    /* RESPONSIVO */
    @media (max-width: 1100px) {
        .estrenos-grid { grid-template-columns: repeat(3, 1fr); }
    }
    @media (max-width: 600px) {
        .estrenos-grid { grid-template-columns: repeat(2, 1fr); }
        .main-title { font-size: 3.5rem; }
    }
</style>