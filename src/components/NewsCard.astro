---
const { title, summary, date, category, region, image, url } = Astro.props;
---
<article class="news-card">
    <a href={url} class="card-link">
        <div class="image-wrapper">
            <img src={image} alt={title} loading="lazy" />
            <div class="image-overlay"></div>
            <div class="category-tag">{category}</div>
        </div>
        
        <div class="card-content">
            <div class="meta-row">
                <span class="region">{region}</span>
                <span class="date">{date}</span>
            </div>
            <h3 class="card-title">{title}</h3>
            <p class="card-summary">{summary}</p>
        </div>
    </a>
</article>

<style>
    .news-card {
        background: transparent;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    }

    .card-link { text-decoration: none; display: block; outline: none; }

    /* IMAGEN CUADRADA - El toque editorial */
    .image-wrapper {
        position: relative;
        aspect-ratio: 1 / 1; /* Cuadrado perfecto */
        overflow: hidden;
        border-radius: 4px; /* Menos redondeado para verse más "rudo" */
        background: #0a0a0a;
        margin-bottom: 16px;
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(0.6) contrast(1.1); /* Más oscuro inicialmente */
        transition: all 0.8s cubic-bezier(0.2, 1, 0.3, 1);
    }

    /* Degradado sutil para que la etiqueta siempre destaque */
    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0) 40%);
        pointer-events: none;
    }

    /* HOVER EFECTO - La imagen cobra vida */
    .news-card:hover img {
        filter: grayscale(0) contrast(1);
        transform: scale(1.05);
    }

    /* ETIQUETA SOBRE LA IMAGEN */
    .category-tag {
        position: absolute;
        top: 12px;
        left: 12px;
        background: #111;
        color: #fff;
        font-family: 'Inter', sans-serif;
        font-size: 9px;
        font-weight: 900;
        padding: 4px 8px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        z-index: 2;
    }

    /* CONTENIDO */
    .card-content { padding: 0 4px; }

    .meta-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 6px;
    }

    .region {
        color: #ff0000;
        font-family: 'Inter', sans-serif;
        font-size: 10px;
        font-weight: 900;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .date {
        color: #444;
        font-family: 'Inter', sans-serif;
        font-size: 9px;
        font-weight: 800;
    }

    .card-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.8rem; /* Un poco más grande para que tenga impacto */
        line-height: 0.95;
        color: #fff;
        margin-bottom: 8px;
        letter-spacing: 0.2px;
        transition: color 0.3s ease;
        /* Limitar a 2 líneas */
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .news-card:hover .card-title {
        color: #ff0000;
    }

    .card-summary {
        font-family: 'Inter', sans-serif;
        font-size: 12px;
        color: #777;
        line-height: 1.4;
        font-weight: 500;
        /* Limitar a 2 líneas */
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>