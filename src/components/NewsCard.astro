---
const { title, summary, date, category, region, image, url } = Astro.props;
---
<article class="news-card">
    <a href={url} class="card-link">
        <div class="image-wrapper">
            <img src={image} alt={title} loading="lazy" />
            <div class="image-overlay"></div>
            <div class="category-tag">{category}</div>
        </div>
        
        <div class="card-content">
            <div class="meta-row">
                <span class="region">{region}</span>
                <span class="date">{date}</span>
            </div>
            <h3 class="card-title">{title}</h3>
            <p class="card-summary">{summary}</p>
        </div>
    </a>
</article>

<style>
    .news-card {
        background: #0a0a0a;
        border: 1px solid #1a1a1a;
        transition: all 0.3s ease;
    }

    .news-card:hover {
        border-color: #ff0033;
        background: #111;
    }

    .card-link { text-decoration: none; display: block; outline: none; }

    /* IMAGEN - Aspecto editorial limpio */
    .image-wrapper {
        position: relative;
        aspect-ratio: 16 / 10;
        overflow: hidden;
        border-radius: 0;
        background: #050505;
        margin-bottom: 0;
    }

    .image-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%) brightness(0.8);
        transition: all 0.4s ease;
    }

    /* Degradado para contraste de texto */
    .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0.1) 60%);
        pointer-events: none;
    }

    /* HOVER EFFECT */
    .news-card:hover img {
        filter: grayscale(0%) brightness(1);
        transform: scale(1.03);
    }

    /* CATEGOR√çA BADGE */
    .category-tag {
        position: absolute;
        top: 12px;
        left: 12px;
        background: rgba(0,0,0,0.8);
        color: #fff;
        font-family: 'Inter', sans-serif;
        font-size: 8px;
        font-weight: 900;
        padding: 5px 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
        z-index: 2;
        border: 1px solid #333;
    }

    /* CONTENIDO */
    .card-content { padding: 16px; }

    .meta-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
        font-size: 10px;
        font-weight: 700;
    }

    .region {
        color: #ff0033;
        letter-spacing: 1px;
        text-transform: uppercase;
    }

    .date {
        color: #888;
    }

    .card-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: 1.35rem;
        line-height: 1.2;
        color: #fff;
        margin: 0 0 8px 0;
        letter-spacing: -0.5px;
        font-style: italic;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-summary {
        color: #999;
        font-family: 'Inter', sans-serif;
        font-size: 13px;
        line-height: 1.5;
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>