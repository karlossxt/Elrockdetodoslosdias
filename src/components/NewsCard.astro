---
const { title, summary, date, category, region, image, url } = Astro.props;
---

<a href={url} class="card-capsule">
    <!-- IMAGEN CON ETIQUETAS -->
    <div class="card-media">
        <img src={image} alt={title} />
        <div class="media-tags">
            <span class="tag-cat">{category}</span>
            <span class="tag-reg"><i class="fa-solid fa-location-dot"></i> {region}</span>
        </div>
    </div>

    <!-- CONTENIDO -->
    <div class="card-body">
        <div class="card-meta">
            <i class="fa-regular fa-clock"></i>
            <span>{date}</span>
        </div>
        <h3>{title}</h3>
        <p>{summary}</p>
    </div>
</a>

<style>
    .card-capsule {
        background: #111; /* Color de fondo de la tarjeta */
        border-radius: 20px;
        overflow: hidden;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease, border-color 0.3s ease;
        border: 1px solid #1a1a1a;
        height: 100%;
    }

    .card-capsule:hover {
        transform: translateY(-5px);
        border-color: #333;
    }

    /* Imagen y Etiquetas */
    .card-media {
        position: relative;
        height: 200px;
        overflow: hidden;
    }
    .card-media img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .media-tags {
        position: absolute;
        top: 15px;
        left: 15px;
        display: flex;
        gap: 8px;
    }

    .tag-cat {
        background: #e63946; /* Rojo */
        color: white;
        font-size: 10px;
        font-weight: 900;
        padding: 4px 10px;
        border-radius: 4px;
        text-transform: uppercase;
    }

    .tag-reg {
        background: rgba(0, 0, 0, 0.7);
        backdrop-filter: blur(5px);
        color: white;
        font-size: 10px;
        font-weight: 800;
        padding: 4px 10px;
        border-radius: 4px;
        text-transform: uppercase;
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        gap: 5px;
    }

    /* Cuerpo del texto */
    .card-body {
        padding: 25px;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .card-meta {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #666;
        font-size: 12px;
        font-weight: 600;
    }

    h3 {
        font-family: 'Inter', sans-serif; /* Usamos Inter para que sea más legible en pequeño */
        font-size: 1.3rem;
        font-weight: 800;
        color: white;
        line-height: 1.2;
        margin: 0;
    }

    p {
        color: #888;
        font-size: 0.9rem;
        line-height: 1.5;
        margin: 0;
        /* Truncar a 3 líneas */
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>