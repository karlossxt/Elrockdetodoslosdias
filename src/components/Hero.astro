---
// Hero.astro
const { tag, title, subtitle, image, url } = Astro.props;
---

<section class="hero-rock-safe">
    <!-- IMAGEN DE FONDO (Optimizada) -->
    <div class="hero-visual-box">
        <img 
            src={image} 
            alt={title} 
            class="hero-main-img" 
            loading="eager" 
            decoding="async"
        />
        <div class="hero-gradient"></div>
    </div>
    
    <!-- CONTENIDO (Estructura más robusta) -->
    <div class="hero-container">
        <div class="hero-text-area">
            {tag && <span class="hero-tag-new">{tag}</span>}
            
            <a href={url} class="hero-anchor">
                <h1 class="hero-main-title">{title}</h1>
            </a>

            <p class="hero-description-new">{subtitle}</p>
            
            <a href={url} class="hero-action-btn">
                <span>LEER HISTORIA</span>
                <i class="fa-solid fa-arrow-right"></i>
            </a>
        </div>
    </div>
</section>

<style>
    /* VARIABLES PARA FACILITAR CAMBIOS */
    :root {
        --primary-red: #ff0000;
        --dark-bg: #000;
        --text-gray: #bbb;
    }

    .hero-rock-safe {
        position: relative;
        min-height: 85vh; /* Usamos min-height en vez de height fijo */
        display: flex;
        align-items: center;
        background: var(--dark-bg);
        overflow: hidden;
        width: 100%;
    }

    /* CONTENEDOR DE IMAGEN - Mejor manejo de capas */
    .hero-visual-box {
        position: absolute;
        top: 0;
        right: 0;
        width: 65%; /* Un poco más de la mitad */
        height: 100%;
        z-index: 1;
    }

    .hero-main-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%) brightness(0.4);
        transition: transform 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94), filter 0.8s ease;
    }

    .hero-gradient {
        position: absolute;
        inset: 0;
        /* Gradiente más agresivo para asegurar legibilidad del texto */
        background: linear-gradient(to right, 
            var(--dark-bg) 10%, 
            rgba(0,0,0,0.8) 30%, 
            transparent 100%);
        z-index: 2;
    }

    /* CONTENEDOR CENTRALIZADO */
    .hero-container {
        width: 100%;
        max-width: 1300px;
        margin: 0 auto;
        padding: 0 5%;
        position: relative;
        z-index: 10;
    }

    .hero-text-area {
        max-width: 650px;
    }

    .hero-tag-new {
        background: var(--primary-red);
        color: white;
        font-family: 'Inter', sans-serif;
        font-weight: 900;
        font-size: 11px;
        padding: 5px 12px;
        letter-spacing: 2px;
        display: inline-block;
        margin-bottom: 25px;
        text-transform: uppercase;
    }

    .hero-anchor { text-decoration: none; color: inherit; }

    .hero-main-title {
        font-family: 'Bebas Neue', cursive;
        font-size: clamp(3rem, 8vw, 5.5rem); /* Tamaño fluido según pantalla */
        line-height: 0.9;
        color: white;
        margin: 0 0 25px 0;
        text-transform: uppercase;
        letter-spacing: -1px;
    }

    .hero-description-new {
        font-family: 'Inter', sans-serif;
        font-size: 1.1rem;
        color: var(--text-gray);
        line-height: 1.6;
        margin-bottom: 40px;
        max-width: 480px;
        text-wrap: balance; /* Evita viudas en el texto */
    }

    /* BOTÓN MEJORADO */
    .hero-action-btn {
        display: inline-flex;
        align-items: center;
        gap: 15px;
        background: white;
        color: black;
        padding: 15px 35px;
        text-decoration: none;
        font-family: 'Bebas Neue', cursive;
        font-size: 1.4rem;
        transition: all 0.3s ease;
        border: 2px solid white;
    }

    .hero-action-btn:hover {
        background: var(--primary-red);
        color: white;
        border-color: var(--primary-red);
        transform: translateY(-3px);
    }

    /* EFECTOS AL PASAR EL MOUSE POR LA SECCIÓN */
    .hero-rock-safe:hover .hero-main-img {
        transform: scale(1.05);
        filter: grayscale(20%) brightness(0.5);
    }

    /* RESPONSIVO TOTAL */
    @media (max-width: 1024px) {
        .hero-visual-box {
            width: 100%;
        }
        .hero-gradient {
            background: linear-gradient(to top, 
                var(--dark-bg) 20%, 
                rgba(0,0,0,0.6) 100%);
        }
        .hero-rock-safe {
            align-items: flex-end;
            padding-bottom: 60px;
            text-align: center;
        }
        .hero-text-area {
            margin: 0 auto;
        }
        .hero-description-new {
            margin-left: auto;
            margin-right: auto;
        }
        .hero-main-title {
            font-size: 3.5rem;
        }
    }
</style>