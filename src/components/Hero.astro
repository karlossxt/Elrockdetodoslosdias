---
const { tag, title, subtitle, image, url } = Astro.props;
---
<section class="hero-section" style={`background-image: linear-gradient(to right, rgba(0,0,0,0.9) 30%, rgba(0,0,0,0.1)), url(${image});`}>
    <div class="hero-content">
        <span class="hero-tag">{tag}</span>
        <h1 class="hero-title">{title}</h1>
        <p class="hero-subtitle">{subtitle}</p>
        <a href={url} class="hero-link">
            LEER EL ARTÍCULO COMPLETO <span class="arrow">→</span>
        </a>
    </div>
</section>

<style>
    .hero-section {
        height: 85vh;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        padding: 0 5%;
        margin-top: -20px; /* Ajuste para el header */
    }
    .hero-content { max-width: 700px; }
    .hero-tag {
        background: #ff0000;
        color: white;
        font-family: 'Inter', sans-serif;
        font-weight: 900;
        font-size: 12px;
        padding: 6px 12px;
        letter-spacing: 1px;
        display: inline-block;
        margin-bottom: 25px;
    }
    .hero-title {
        font-family: 'Bebas Neue', sans-serif;
        font-size: clamp(4rem, 10vw, 8.5rem);
        line-height: 0.85;
        color: white;
        text-transform: uppercase;
        font-style: italic; /* Clave para el look de la imagen 1 */
        margin-bottom: 30px;
        letter-spacing: -2px;
    }
    .hero-subtitle {
        font-family: 'Inter', sans-serif;
        color: #ccc;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 40px;
        max-width: 500px;
    }
    .hero-link {
        font-family: 'Inter', sans-serif;
        color: white;
        text-decoration: none;
        font-weight: 800;
        font-size: 13px;
        letter-spacing: 1px;
        border-bottom: 2px solid #333;
        padding-bottom: 5px;
        transition: 0.3s;
    }
    .hero-link:hover { border-color: #ff0000; }
    .arrow { margin-left: 10px; transition: 0.3s; }
    .hero-link:hover .arrow { margin-left: 20px; }
</style>